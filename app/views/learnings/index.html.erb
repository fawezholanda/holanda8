<h1><font face="verdana" color="green">Welcome to your Learning Journey!</h1></font>
<br />

<% @learnings.each do |learning| %>
  <div>
    <h2><%= learning.Topic %></h2>
    <br />
    <h2><%= learning.Question %></h2>

    <% if learning.user.present? %>
      <small><%= learning.user.email %></small>
    <% end %>
  </div>
  <%= simple_form_for @comment, url: learning_comments_path(learning) do |f| %>
    <%= f.input :message %>
    <%= f.input :rating %>
    <%= f.submit "Add a Comment", class: 'btn btn-primary' %>
  <% end %>
  <h1>Comments</h1>
  <% learning.comments.each do |comment| %>
    <div>
      <blockquote>
        <b><%= comment.rating %></b> -
          <%= comment.message %>
        <small><%= comment.user.email %></small>
      </blockquote>
    </div>
  <% end %>
  <hr>
<% end %>








